<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context="app.example.clickit.MainActivity">

    <Button
        android:id="@+id/upButton"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginBottom="40dp"
        android:background="#FF9800"
        android:longClickable="true"
        android:onClick="clickCount"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/clickCounter"
        tools:text="Click!" />

    <TextView
        android:id="@+id/clickCounter"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="#454E4C"
        android:gravity="center"
        android:textColor="#FFFCFC"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="100dp"
        android:layout_height="145dp"
        android:background="#4CAF50"
        android:onClick="UpOrDown"
        android:textColor="#FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="65sp"
        app:layout_constraintRight_toLeftOf="@id/upButton"
        app:layout_constraintTop_toTopOf="@id/upButton" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E91E63"
        android:onClick="newButton"
        android:text="New"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E91E63"
        android:onClick="saveTitle"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toLeftOf="@id/button5"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#E91E63"
        android:onClick="openCount"
        android:text="Open"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText" />

    <EditText
        android:id="@+id/clickIntervalViewer"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:background="#454E4C"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/upButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>