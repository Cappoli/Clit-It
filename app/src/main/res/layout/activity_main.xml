<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9800"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/upButton"
        android:layout_width="170dp"
        android:layout_height="145dp"
        android:layout_marginBottom="40dp"
        android:background="#009688"
        android:longClickable="true"
        android:onClick="clickCount"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="80sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/clickCounter" />

    <TextView
        android:id="@+id/clickCounter"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:background="#454E4C"
        android:gravity="center"
        android:textColor="#FFFCFC"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="100dp"
        android:layout_height="145dp"
        android:background="#ABB82F"
        android:onClick="upOrDown"
        android:textColor="#FFFFFF"
        android:textColorLink="#00FFFFFF"
        android:textSize="65sp"
        app:layout_constraintRight_toLeftOf="@id/upButton"
        app:layout_constraintTop_toTopOf="@id/upButton" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="#FFFFFF"
        android:cursorVisible="true"
        android:gravity="center"
        android:inputType="text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clickCounter" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:onClick="newCount"
        android:text="New"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toRightOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:onClick="saveTitle"
        android:text="Save"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="@id/textView"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:onClick="openCount"
        android:text="Open"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/clickIntervalViewer"
        android:layout_width="270dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:background="#454E4C"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/upButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>